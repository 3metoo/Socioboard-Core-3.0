@section Scripts{
    <script>
        function CreateDemoReq()
        {
            var firstName = $('#req_first_name').val();
            var lastName = $('#req_last_name').val();
            var email = $('#req_Business_Email').val();
            var company = $('#req_Company').val();
            var Phone = $('#req_phone').val();
            var skype = $('#req_skype').val();

            $.ajax({

                type: "POST",

                url: "../Index/AddDemoRequest",

                data: { "Firstname": firstName, "Lastname": lastName, "Company": company, "Email": email, "Phone": Phone, "Skype": skype, "DemoPlanType": "Demo" },

                //contentType: "application/json; charset=utf-8",

                dataType: "html",

                success: function (msg) {

                    alertify.set({ delay: 5000 });
                    alertify.success("Request Sent Successfully");
                    $('#req_first_name').val("");
                    $('#req_last_name').val("");
                    $('#req_Business_Email').val("");
                    $('#req_Company').val("");
                    $('#req_phone').val("");
                    $('#req_skype').val("");
                }

            });
        }
    </script>
    
    @if(TempData["Error"] != null)
            {
                   <script>
                       $(document).ready(function () {
                           alertify.set({ delay: 5000 });
                           alertify.error("@Convert.ToString(TempData["Error"])");
                       });
                   </script>
      
    }






}
